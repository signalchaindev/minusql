{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "importHelpers": true,
    "lib": ["es2019"],
    "module": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "resolveJsonModule": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es2019"
  },
  "include": ["src", "generator"],
  "exclude": ["node_modules", "dist", "data"]
}
